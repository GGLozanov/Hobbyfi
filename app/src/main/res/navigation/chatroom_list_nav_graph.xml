<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chatroom_list_graph"
    app:startDestination="@id/chatroomListFragment">
        <fragment
            android:id="@+id/chatroomListFragment"
            android:name="com.example.hobbyfi.ui.main.ChatroomListFragment"
            android:label="Chatrooms">
                <action
                    android:id="@+id/action_chatroomListFragment_to_chatroomCreateFragment"
                    app:destination="@id/chatroomCreateFragment" />
                <action
                    android:id="@+id/action_chatroomListFragment_to_chatroomActivity"
                    app:destination="@id/chatroomActivity" />
        </fragment>
        <fragment
            android:id="@+id/chatroomCreateFragment"
            android:name="com.example.hobbyfi.ui.main.ChatroomCreateFragment"
            android:label="Create Chatroom"
            tools:layout="@layout/fragment_chatroom_create">
                <argument
                    android:name="user"
                    app:argType="com.example.hobbyfi.models.User" />
                <action
                    android:id="@+id/action_chatroomCreateFragment_to_tag_nav_graph"
                    app:destination="@id/tag_nav_graph" >
                        <argument
                            android:name="selectedTags"
                            app:argType="com.example.hobbyfi.models.Tag[]" />
                        <argument
                            android:name="tags"
                            app:argType="com.example.hobbyfi.models.Tag[]" />
                </action>
                <action
                    android:id="@+id/action_chatroomCreateFragment_to_chatroomActivity"
                    app:destination="@id/chatroomActivity"
                    app:popUpTo="@id/chatroomListFragment" />
        </fragment>
        <include app:graph="@navigation/tag_nav_graph" />
        <activity
            android:id="@+id/chatroomActivity"
            android:name="com.example.hobbyfi.ui.chatroom.ChatroomActivity"
            android:label="ChatroomActivity" >
                <argument
                    android:name="user"
                    app:argType="com.example.hobbyfi.models.User"
                    app:nullable="true" />
                <argument
                    android:name="chatroom"
                    app:argType="com.example.hobbyfi.models.Chatroom"
                    app:nullable="true" />
        </activity>
</navigation>
